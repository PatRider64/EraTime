{% extends 'baseLogin.html.twig' %}

{% block title %}Sys&Com - SysTime{% endblock %}

{% block body %}
<div class="wrapper" id="content">
	<div class="row">
		{{ form_start(resetPasswordForm, { 'attr': {'class': "col-sm-5 col-md-4 col-lg-3 box"} }) }}
			<div class="header">
				<h4>Mot de passe oublié</h4>
			</div>
			<div>
				{% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
			</div>
			<noscript><p class="noscript">Merci d'activer le JavaScript pour utiliser ce site.<br>En cas de problème, contacter le support technique.</p></noscript>
			<div class="form-group">
				{{ form_row(resetPasswordForm.email) }}
			</div>
			<div class="footer">
				{{ form_row(resetPasswordForm.submit) }}
	    	</div>
		{{ form_end(resetPasswordForm) }}
	</div>
</div>
{% endblock %}

{% extends 'baseLogin.html.twig' %}

{% block title %}Era94 - EraTime{% endblock %}

{% block body %}
<div class="wrapper" id="content">
	<div class="row">
		<form action="{{ path('app_login') }}" method="post" class="col-sm-5 col-md-4 col-lg-3 box" id="loginForm" data-validate="parsley" autocomplete="off">
			<div class="header">
				<h4>Se Connecter</h4>
			</div>
			<div>
        		{% if error %}
    			    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    			{% endif %}
				{% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
    		</div>
			<div class="form-group">
				<input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control parsley-validated" autocomplete="login" required autofocus placeholder="Identifiant">
			</div>
			<div class="form-group">
				<input type="password" name="_password" id="password" class="form-control parsley-validated" autocomplete="current-password" required placeholder="Mot de Passe">
			</div>
            <div class="form-group">
                <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
            </div>
            <div class="form-group clearfix">
				<a href="{{ path("app_reset_password") }}" class="forgot-psw">Mot de passe oubli√© ?</a>
			</div>
			<div class="footer">
				<input type="submit" value="Connexion" class="btn btn-primary" />
	        </div>
		</form>
	</div>
</div>
{% endblock %}
